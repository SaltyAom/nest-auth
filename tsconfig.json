{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2017",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "paths": {
            "src": ["src"],
            "@services": ["src/services/*"],
            "@pipes/*": ["src/pipes/*"],
            "@guards/*": ["src/guards/*"],
            "@interceptors/*": ["src/interceptors/*"],
            "@decorators/*": ["src/decorators/*"],
        }
    },
    "exclude": ["node_modules", "dist"]
}